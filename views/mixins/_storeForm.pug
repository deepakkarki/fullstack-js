mixin storeForm(store = {})
  form(action=`/add/${store._id || ''}` method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name" value=`${store.name}`)

    label(for="description") Description
    textarea(name="description")= store.description
    br

    //- address for lang and lat
    label(for="address") Address
    input(type="text" id="address" name="location[address]" value=(store.location && store.location.address) required)

    label(for="lng") Address Lng
    input(type="text" id="lng" name="location[coordinates][0]"
          value=(store.location && store.location.coordinates && store.location.coordinates[0]) required)

    label(for="lat") Address Lat
    input(type="text" id="lat" name="location[coordinates][1]" 
          value=(store.location && store.location.coordinates && store.location.coordinates[1]) required)
    br
    br

    - const choices = ['Wifi', 'Open Late', 'Family friendly', 'Vegetarian', 'Licensed']
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" name="tags" id=choice value=choice 
                checked=(tags.includes(choice)))
          label(for=choice)= choice

    input(type="submit" value="Save â†’" class="button")